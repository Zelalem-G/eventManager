<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="DContentArea" stylesheets="@../../Styles/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="main.eventmanager.UsersViewController">

    <VBox alignment="TOP_CENTER" spacing="20" styleClass="DUserBox" stylesheets="@../../Styles/style.css" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <Label styleClass="DTitle" stylesheets="@../../Styles/style.css" text="Registered Users" />

        <TableView fx:id="userTable" prefHeight="500" prefWidth="800" styleClass="DTable" stylesheets="@../../Styles/style.css">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="50" text="ID" />
                <TableColumn fx:id="usernameCol" prefWidth="150" text="Username" />
                <TableColumn fx:id="fullNameCol" prefWidth="200" text="Full Name" />
                <TableColumn fx:id="emailCol" prefWidth="250" text="Email" />
                <TableColumn fx:id="roleCol" prefWidth="100" text="Role" />
            </columns>
        </TableView>

    </VBox>
</AnchorPane>
