<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:id="statisticsView" fx:controller="main.eventmanager.StatisticsController">
    <!-- Top Navigation Bar (From previous setup) -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #2C3E50; -fx-padding: 15;">
            <children>
                <ImageView fitHeight="44.0" fitWidth="87.0">
                    <image>
                        <Image url="@../../images/logo-transparent.png" />
                    </image>
                </ImageView>
                <Label prefHeight="46.0" prefWidth="151.0" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" styleClass="label-title" text="Event Manager" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" prefHeight="53.0" prefWidth="165.0" style="-fx-text-fill: white; -fx-font-size: 16px;" text="Hello, Admin!" />
                <MenuButton prefHeight="50.0" prefWidth="135.0" style="-fx-background-color: #3498DB; -fx-text-fill: white;" text="Menu">
                    <items>
                        <MenuItem fx:id="homeMenuItem" onAction="#onMenuClick" text="Home" />
                        <MenuItem fx:id="browseEventsMenuItem" onAction="#onMenuClick" text="Available Events" />
                        <MenuItem fx:id="myRegisteredMenuItem" onAction="#onMenuClick" text="Registered Events" />
                        <MenuItem fx:id="accountMenuItem" onAction="#onMenuClick" text="Account" />
                        <SeparatorMenuItem />
                        <MenuItem fx:id="adminEventBtn" onAction="#onMenuClick" text="Manage Events (Admin)" />
                        <MenuItem fx:id="adminOpsBtn" onAction="#onMenuClick" text="Admin Operations" />
                        <SeparatorMenuItem />
                        <MenuItem fx:id="aboutMenuItem" onAction="#onMenuClick" text="About Us" />
                    </items>
                </MenuButton>
            </children>
        </HBox>
    </top>

    <!-- Main Content Area -->
    <VBox spacing="30" style="-fx-padding: 20; -fx-background-color: #ECF0F1;">
        <children>
            <HBox spacing="20" alignment="CENTER">
                <!-- Cards for Stats -->
                <VBox fx:id="usersCard" styleClass="D-card" alignment="CENTER" spacing="10">
                    <children>
                        <Label text="Total Users" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                        <Label fx:id="totalUsersLabel" text="123" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #3498DB;" />
                    </children>
                </VBox>
                <VBox fx:id="eventsCard" styleClass="D-card" alignment="CENTER" spacing="10">
                    <children>
                        <Label text="Total Events" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                        <Label fx:id="totalEventsLabel" text="45" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #E74C3C;" />
                    </children>
                </VBox>
                <VBox fx:id="registrationsCard" styleClass="D-card" alignment="CENTER" spacing="10">
                    <children>
                        <Label text="Total Registrations" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                        <Label fx:id="totalRegistrationsLabel" text="350" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #F39C12;" />
                    </children>
                </VBox>
                <VBox fx:id="feedbackCard" styleClass="D-card" alignment="CENTER" spacing="10">
                    <children>
                        <Label text="Average Feedback Rating" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                        <Label fx:id="averageFeedbackLabel" text="4.5" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1ABC9C;" />
                    </children>
                </VBox>
            </HBox>
        </children>
    </VBox>
</AnchorPane>

