<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../Styles/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="main.eventmanager.StatisticsController">
    <VBox spacing="30" style="-fx-padding: 20; -fx-background-color: #ECF0F1;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <children>
            <HBox alignment="CENTER" spacing="20">
                <!-- Cards for Stats -->
                <VBox fx:id="usersCard" alignment="CENTER" spacing="10" styleClass="D-card" stylesheets="@../../Styles/style.css">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Total Users" />
                        <Label fx:id="totalUsersLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #3498DB;" text="123" />
                    </children>
                </VBox>
                <VBox fx:id="eventsCard" alignment="CENTER" spacing="10" styleClass="D-card" stylesheets="@../../Styles/style.css">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Total Events" />
                        <Label fx:id="totalEventsLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #E74C3C;" text="45" />
                    </children>
                </VBox>
                <VBox fx:id="registrationsCard" alignment="CENTER" spacing="10" styleClass="D-card" stylesheets="@../../Styles/style.css">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Total Registrations" />
                        <Label fx:id="totalRegistrationsLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #F39C12;" text="350" />
                    </children>
                </VBox>
                <VBox fx:id="feedbackCard" alignment="CENTER" prefWidth="261.0" spacing="10" styleClass="D-card" stylesheets="@../../Styles/style.css">
                    <children>
                        <Label prefWidth="160.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" wrapText="true" text="Average Feedback Rating" />
                        <Label fx:id="averageFeedbackLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1ABC9C;" text="4.5" />
                    </children>
                </VBox>
            </HBox>
        </children>
    </VBox>
</AnchorPane>
